<div class="col-xs-12 divider" id="user_bottom_div">
<h3 class="text-center">Booooookkkssss !</h3>
	<div id="list-partial-elements" class="col-md-8 col-md-offset-1">
	<%= will_paginate @books_user_added %>

	<div class="row">
	<% @books_user_added.each do |book_item| %>
		<div class="media book-user-added">
		  <div class="media-left">
		    <a href= "/books/<%= book_item.id %>"> 
				<%= image_tag book_item.book_img.url(:small) , class: "single_book_user_added" %>
		    </a>
		  </div>
		  <div class="media-body">
		  <a href= "/books/<%= book_item.id %>"> 
		    <h4 class="media-heading"><%= book_item.title%></h4>
		  </a>
		    <div class="average-review-rating label" data-score="<%= @average_review %>"><span id="avg-rating-label" > Average Rating : </span>  </div>
		    <br>
		    <div class="content-single-book"> <div > Author : <%= book_item.author %> </div> 
		    	<div > Category : <%= Category.find(book_item.category_id).name %> </div>  
		    	<div > Total reviews : <%= book_item.reviews.count %> </div> 
		    </div> 	
		  </div>
		</div>
	<% end %>
	</div>
		<%= will_paginate @books_user_added%>

	</div>
</div>

<style type="text/css">
	#user_bottom_div{
		margin-top: 20px;
	}
</style>
